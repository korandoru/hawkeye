FROM public.ecr.aws/docker/library/rust:1.76.0 as rust-build
ENV LANG C.utf8
WORKDIR /build
COPY . .
RUN cd hawkeye-core/native && cargo build --release

FROM ghcr.io/graalvm/native-image:ol9-java17-22.3.0 as build
ENV LANG C.utf8
WORKDIR /build
COPY . .
RUN ./mvnw -B -ntp clean package -DskipTests -Pnative \
    -Dnative-image.buildArgs='-H:+StaticExecutableWithDynamicLibC'

FROM gcr.io/distroless/base-debian12:nonroot
ENV LANG C.utf8
ENV JAVA_OPTS="-Djava.library.path=/lib"
COPY --from=rust-build /build/hawkeye-core/native/target/release/libhawkeyejni.so /lib/
COPY --from=build /build/hawkeye-native/target/hawkeye-native /bin/
WORKDIR /github/workspace/
ENTRYPOINT ["/bin/hawkeye-native"]
